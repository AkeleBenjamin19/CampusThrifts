<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="@android:color/white">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/back"
    android:contentDescription="Back Button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_margin="16dp" />

    <!-- Page Title -->

    <!-- Item Image -->
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="Sell An Item"
        android:textColor="#4E4E4E"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/headphone"
    android:background="#F0F0F0" <!-- Light grey background for the image frame -->
    android:contentDescription="Item Image"
    app:layout_constraintTop_toBottomOf="@id/pageTitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

    <!-- Size Label -->
    <TextView
        android:id="@+id/sizeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIZE"
        android:textSize="14sp"
        android:textColor="#4E4E4E"
        app:layout_constraintTop_toBottomOf="@id/itemImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp" />

    <!-- Size Buttons (XS, S, M, L, XL) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sizeOptionsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sizeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp">

        <!-- Size options (XXS, XS, S, M, L, XL) as Buttons -->
        <Button
            android:id="@+id/buttonXXS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXS"
            android:backgroundTint="#F3E8E6"
            android:textColor="#4E4E4E"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonXS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XS"
            android:backgroundTint="#F3E8E6"
            android:textColor="#4E4E4E"
            app:layout_constraintStart_toEndOf="@id/buttonXXS"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:backgroundTint="#F3E8E6"
            android:textColor="#4E4E4E"
            app:layout_constraintStart_toEndOf="@id/buttonXS"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:backgroundTint="#F3E8E6"
            android:textColor="#4E4E4E"
            app:layout_constraintStart_toEndOf="@id/buttonS"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L"
            android:backgroundTint="#F3E8E6"
            android:textColor="#4E4E4E"
            app:layout_constraintStart_toEndOf="@id/buttonM"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonXL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XL"
            android:backgroundTint="#F3E8E6"
            android:textColor="#4E4E4E"
            app:layout_constraintStart_toEndOf="@id/buttonL"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Category Label -->
    <TextView
        android:id="@+id/categoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4E4E4E"
        app:layout_constraintTop_toBottomOf="@id/sizeOptionsLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp" />

    <!-- Category Buttons -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/categoryOptionsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/categoryLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp">

        <!-- Category options (Clothes, Electronics, Accessories, etc.) as Buttons -->
        <Button
            android:id="@+id/buttonClothes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clothes"
            android:backgroundTint="#EFF5E6"
            android:textColor="#4E4E4E"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonElectronics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electronics"
            android:backgroundTint="#EFF5E6"
            android:textColor="#4E4E4E"
            app:layout_constraintStart_toEndOf="@id/buttonClothes"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonAccessories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessories"
            android:backgroundTint="#EFF5E6"
            android:textColor="#4E4E4E"
            app:layout_constraintStart_toEndOf="@id/buttonElectronics"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Books"
            android:backgroundTint="#EFF5E6"
            android:textColor="#4E4E4E"
            app:layout_constraintStart_toEndOf="@id/buttonAccessories"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonPersonalCare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Care"
            android:backgroundTint="#EFF5E6"
            android:textColor="#4E4E4E"
            app:layout_constraintStart_toEndOf="@id/buttonBooks"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonShoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoes"
            android:backgroundTint="#EFF5E6"
            android:textColor="#4E4E4E"
            app:layout_constraintStart_toEndOf="@id/buttonPersonalCare"
            android:layout_marginEnd="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Descriptions Label -->
    <TextView
        android:id="@+id/descriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descriptions"
        android:textSize="14sp"
        android:textColor="#4E4E4E"
        app:layout_constraintTop_toBottomOf="@id/categoryOptionsLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp" />

    <!-- Descriptions Field -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sleek and modern headphones designed for premium sound quality and comfort, perfect for any listening experience."
        android:textSize="12sp"
        android:textColor="#4E4E4E"
        app:layout_constraintTop_toBottomOf="@id/descriptionLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp" />

    <!-- Price Label -->
    <TextView
        android:id="@+id/priceLabel"
        android:layout_width="81dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="$50.00"
        android:textColor="#4E4E4E"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionText" />

    <!-- Upload Button -->
    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:backgroundTint="#8C4F49"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/priceLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp" />

    <!-- Bottom Navigation Icons -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home Icon -->
        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Home Icon"
            android:src="@drawable/home"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <!-- Heart Icon -->
        <ImageView
            android:id="@+id/heartIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart" <!-- Replace with heart icon drawable -->
        android:contentDescription="Heart Icon"
        app:layout_constraintStart_toEndOf="@id/homeIcon"
        android:layout_marginStart="16dp" />

        <!-- Upload Icon -->
        <ImageView
            android:id="@+id/uploadIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_upload" <!-- Replace with upload icon drawable -->
        android:contentDescription="Upload Icon"
        app:layout_constraintStart_toEndOf="@id/heartIcon"
        android:layout_marginStart="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
